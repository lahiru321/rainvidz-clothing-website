# Backend Environment Variables

# MongoDB
MONGODB_URI=your_mongodb_connection_string_here

# Supabase (REQUIRED for admin authentication)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# JWT Secrets (for custom auth - optional if using Supabase only)
JWT_SECRET=your_very_long_random_secret_here_32_chars_min
JWT_REFRESH_SECRET=another_very_long_random_secret_here_32_chars_min

# Server
NODE_ENV=development
PORT=5000

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# PayHere
PAYHERE_MERCHANT_ID=your_merchant_id
PAYHERE_MERCHANT_SECRET=your_merchant_secret
PAYHERE_MODE=sandbox

# Email/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
